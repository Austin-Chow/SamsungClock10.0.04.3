<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/analog_clock" android:focusable="true" android:descendantFocusability="blocksDescendants" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="top|center_vertical|center_horizontal|center" android:orientation="vertical" android:id="@+id/analog_clock_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <AnalogClock android:id="@+id/analog_clock_normal_view" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:dial="@drawable/analogclock_bg_normal" android:hand_hour="@drawable/analogclock_hour_normal" android:hand_minute="@drawable/analogclock_min_normal"/>
