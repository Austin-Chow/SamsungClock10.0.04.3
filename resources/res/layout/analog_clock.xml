    </LinearLayout>
    <TextClock android:textAppearance="@style/AnalogClock.TextAppearance.DateView.Light" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/analog_clock_full_date_view" android:visibility="gone" style="@style/AnalogDateViewStyle"/>
    <TextClock android:textAppearance="@style/AnalogClock.TextAppearance.DateView.Dark" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/analog_clock_full_date_view_white_wallpaper" android:visibility="gone" style="@style/AnalogDateViewStyle"/>
</FrameLayout>
