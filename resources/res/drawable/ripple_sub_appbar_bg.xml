<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true" android:height="@dimen/clock_sub_appbar_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/sub_appbar_on_background_color"/>
            <corners android:radius="26dp"/>
        </shape>
    </item>
    <item android:state_checked="false" android:height="@dimen/clock_sub_appbar_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/sub_appbar_off_background_color"/>
            <corners android:radius="26dp"/>
        </shape>
    </item>
</selector>
